# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# WS REST
GET     /services/news              controllers.News.read
# Post-It
GET     /                           controllers.Application.index
POST     /services/postit/add       controllers.Application.add
GET     /services/postit/del/:id    controllers.Application.delete(id:Long)
# Ged
GET     /ged/                       controllers.Documents.index
# Timer
GET     /timer/                     controllers.Timer.index
POST     /timer/popup               controllers.Timer.popup
GET     /timer/sound/:id               controllers.Timer.soundFile(id:Option[Long])


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
