# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# WS REST
GET     /services/news              controllers.News.read

# Post-It
GET     /                           controllers.Application.index
POST    /services/postit/add       controllers.Application.add
GET     /services/postit/del/:id    controllers.Application.delete(id:Long)

# Ged
GET     /ged/                       controllers.Documents.index
GET     /ged/update                 controllers.Documents.update
GET     /ged/:path                  controllers.Documents.change(path:Long)
POST    /ged/add/link               controllers.Documents.addLink
POST    /ged/add/directory          controllers.Documents.addDirectory
POST    /ged/add/document           controllers.Documents.addDocument
GET     /ged/typeahead/:part              controllers.Documents.getTypeAhead(part:String)

# Timer
GET     /timer/                  controllers.Timer.index
POST    /timer/popup             controllers.Timer.popup
GET     /timer/sound/:id         controllers.Timer.soundFile(id:Long)
POST    /timer/add               controllers.Timer.add
POST    /timer/del               controllers.Timer.del

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
